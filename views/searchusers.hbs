{{>nav}}
<div class="container">
			<h1>Search for Users</h1><br>
			<div>
				<form action="/app/main/search/users" method="get">
					<input type="text" class="form-input" placeholder="Username" id="username" name="username">
					<button class="search-button" id="submitButton">Search for Users</button>
				</form>
			</div>
			{{#if existUsername.length includeZero=true}}
				<p>Search results for "{{name}}":</p>
				<p id="search-results">
					{{#if existUsername.length}}
					{{#each existUsername}}
					<button class="button-class">
						<div class="small-picture-container float-left">
								<img class="small-picture" src="{{ this.profilepicture }}" alt="Profile Image" width="50">
						</div>
						<div class="content">
							<a href="/app/main/reserve/users/{{ this.username }}" name="name" value="{{ this.username }}" method="get" class="user-link float-left">{{this.username}}</a><br>
							<p class="float-left">{{this.description}}</p>
							<p class="float-right1">Role: {{this.role}}</p>
						</div>
					</button>
					{{/each}}
					{{else}}
					No users found.
					{{/if}}
				</p>
				{{/if}}
			{{#if errorExists}}
				<p>Please enter a username.</p>
			{{/if}}
</div>