<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="css/style.css">
    <link rel="icon" type="image/x-icon" href="sample_files/sampleusersprofilepictures/freddyfazbear.png">
    <title>View Profile - Fazbear Entertainment Labs</title>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src = "js/User.js"></script>
    <script src="js/CurrentUser.js"></script>
    <script src="js/ViewProfile.js"></script>
    <script src = "js/ReverseSee.js"></script>
</head>
<body>
    <nav>
			<div class="homebutton"><a href="/dashboard"><img id="home-icon" src="icons/home.png"> Home</a></div>
			<div class="dropdown">
				<a href="/viewprofile">User Profile</a>
				<div class="dropdown-content">
					<a href="/viewprofile">View Profile</a>
					<a href="/editprofile">Edit Profile</a>
					<a href="/userdelete">Delete Profile</a>
				</div>
			</div>
			<div class="dropdown">
				<a href="reserve.html">Reserve</a>
				<div class="dropdown-content">
					<a href="/reserve">Reserve</a>
					<a href="reserveedit.html">Edit Reservation</a>
					<a href="/reservesee">See Reservations</a>
					<a href="/reserveviewslots">View Available Slots</a>
				</div>
			</div>
			<div class="dropdown">
				<a href="#">Search</a>
				<div class="dropdown-content">
					<a href="/searchusers">Search Users</a>
					<a href="/searchslots">Search Slots</a>
				</div>
			</div>
			<div><a href="/userlogout">Logout</a></div>
		</nav>

    <div class="container">
        <h1>Profile</h1>

        <div>
            <div id="profile-picture-container">
                <img id="profile-picture" src={{ currentUser.profilepicture }} alt="Profile Image" width="150">
            </div>
            <h2 id="profile-name"> {{ currentUser.username }} </h2>
            <p id="profile-description"> {{ currentUser.description }} </p>
            <p id="profile-birthdate">{{ currentUser.birthdate }}</p>

        </div>

        <div>
            <h2>Reserved Seats</h2>
            <table>
        <thead>
          <tr>
            <th>Seat</th>
            <th>Laboratory Number</th>
            <th>Date and Time of Request</th>
            <th>Date and Time of Reservation</th>
          </tr>
        </thead>
        <tbody id="reservationTableBody">
          {{#if reservationsData.length}}
            {{#each reservationsData}}
              <tr>
                <td>{{ this.username }}</td> <td>{{ this.laboratory }}</td>
                <td>{{ this.dateTimeRequest }}</td>
                <td>{{ this.dateTimeReservation }}</td>
              </tr>
            {{/each}}
          {{else}}
            <p class="reservation-none" id="reservation-none">No reservations found.</p>
          {{/if}}
        </tbody>
      </table>

            <div class="subcontainer">

            <a href="userdelete.html" class="normal-link">Delete Profile</a>
            <a href="/editprofile" class="normal-link">Edit Profile</a>

            </div>

            <br>
        </div>
    </div>
</body>
</html>
